eimport java.io.File;
import java.util.Scanner;

public class Launcher {

    private static final String USERNAME = "admin";
    private static final String PASSWORD = "password";

    public static void main(String[] args) {
         (Scanner scanner = new Scanner(System.in)) {

        System.out.println("Welcome to Project Impulse, Enjoy The OG Scrims!");
        System.out.println("-----------------------");

        System.out.print("Enter username: ");
        String enteredUsername = scanner.nextLine();
        System.out.print("Enter password: ");
        String enteredPassword = scanner.nextLine();

        if (isValidLogin(enteredUsername, enteredPassword)) {
            System.out.println("Login successful. Welcome, " + USERNAME + "!");

            boolean running = true;
            while (running) {
                System.out.println("\nLauncher Options:");
                System.out.println("1. Directory Option");
                System.out.println("2. Launch Application");
                System.out.println("3. Exit");

                System.out.print("Choose an option: ");
                int option = scanner.nextInt();

                switch (option) {
                    case 1:
                        listDirectoryContents();
                        break;
                    case 2:
                        launchApplication();
                        break;
                    case 3:
                        running = false;
                        break;
                    default:
                        System.out.println("Invalid option.");
                }
            }
        } else {
            System.out.println("Invalid username or password. Access denied.");
        }

        scanner.close();
    }

    private static boolean isValidLogin(String enteredUsername, String enteredPassword) {
        return enteredUsername.equals(USERNAME) && enteredPassword.equals(PASSWORD);
    }

    private static void listDirectoryContents() {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Enter the directory path: ");
        String directoryPath = scanner.next();

        File directory = new File(directoryPath);
        if (directory.exists() && directory.isDirectory()) {
            File[] files = directory.listFiles();
            if (files != null) {
                System.out.println("Files and folders in directory: " + directoryPath);
                for (File file : files) {
                    System.out.println(file.getName());
                }
            } else {
                System.out.println("No files or folders found in the directory.");
            }
        } else {
            System.out.println("Invalid directory path.");
        }
    }

    private static void launchApplication() {
        System.out.println("Launching application...");
    }
}
